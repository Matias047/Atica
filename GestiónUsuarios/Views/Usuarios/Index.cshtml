@model IEnumerable<GestiónUsuarios.Models.UsuarioViewModels>

@{
    ViewData["Title"] = "Gestión de Usuarios";
    var rolActual = ViewBag.RolActual as string;
}

@if (TempData["Mensaje"] != null)
{
    <div id="alerta-temporal" class="position-fixed top-0 start-50 translate-middle-x p-3" style="z-index: 1055; min-width: 350px;">
        <div class="alert alert-success alert-dismissible fade show shadow-lg border-0" role="alert" style="border-left: 5px solid #0f5132;">
            <div class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill me-2 fs-4"></i>
                <div>
                    @TempData["Mensaje"]
                </div>
            </div>
        </div>
    </div>
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Listado de Usuarios</h2>
        <div>
            <span class="badge @(rolActual == "Administrador" ? "bg-primary" : "bg-info") me-2">
                Modo: @rolActual
            </span>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Nuevo Usuario
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No se encontraron usuarios para mostrar.</div>
    }
    else
    {
        <div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle mb-0 ">
                <thead class="bg-light text-muted">
                    <tr>
                        <th class="d-none">ID</th>
                        <th class="text-uppercase small fw-bold">Nombre Completo</th>
                        <th class="text-uppercase small fw-bold">Documento</th>
                        <th class="text-uppercase small fw-bold">Email</th>
                        <th class="text-uppercase small fw-bold">Rol</th>
                        <th class="text-center text-uppercase small fw-bold">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="d-none">@item.Id</td>
                            <td class="small fw-bold">@item.NombreCompleto</td>
                            <td class="text-muted">@item.Documento</td>
                            <td class="text-muted">@item.Email</td>
                                        <td class="text-center">
                                <span class="badge @(item.Rol == "Administrador" ? "bg-primary" : "bg-info")">
                                    @item.Rol
                                </span>
                            </td>
                            <td class="text-center">
                                @if (rolActual == "Administrador")
                                {
                                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                                    <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-danger" onclick="confirmarEliminar(@item.Id, '@item.NombreCompleto')">
                                                    <i class="bi bi-trash3"></i>
                                    </button>
                                }
                                else
                                {
                                    <span class="text-muted small">Solo lectura</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        </div>
        </div>
        </div>
    }
</div>

<div class="modal fade rounded" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿Estás seguro que deseas eliminar al usuario <strong id="userNameModal"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form asp-action="Eliminar" method="post" id="deleteForm">
                    <input type="hidden" name="id" id="userIdModal" />
                    <button type="submit" class="btn btn-danger">Eliminar Definitivamente</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmarEliminar(id, nombreCompleto) {
            document.getElementById('userNameModal').innerText = nombreCompleto;
            document.getElementById('userIdModal').value = id;
            var myModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            myModal.show();
        }

        document.addEventListener("DOMContentLoaded", function() {
            const alerta = document.getElementById('alerta-temporal');
            if (alerta) {
                setTimeout(function() {
                    const bsAlert = new bootstrap.Alert(alerta.querySelector('.alert'));
                    bsAlert.close();
                }, 2000);
            }
        });
    </script>
}