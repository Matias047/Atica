@model GestiónUsuarios.Models.UsuarioViewModels

@{
    ViewData["Title"] = "Gestión de Usuarios";
    var rolActual = ViewBag.RolActual as string;
}

<div class="container mt-4 rounded">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4>Crear Nuevo Usuario</h4>
        </div>
        <div class="card-body">
            <form asp-action="Crear">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Nombre" class="form-label text-muted"></label>
                        <span class="text-danger">*</span>
                        <input asp-for="Nombre" class="form-control" placeholder="Ej: Matías" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Apellido" class="form-label text-muted"></label>
                        <span class="text-danger">*</span>
                        <input asp-for="Apellido" class="form-control" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Documento" class="form-label text-muted"></label>
                    <span class="text-danger">*</span>
                    <input asp-for="Documento" class="form-control" />
                    <span asp-validation-for="Documento" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label text-muted"></label>
                    <span class="text-danger">*</span>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rol" class="form-label text-muted"></label>
                    <select asp-for="Rol" class="form-select">
                        <option value="">-- Seleccione un Rol --</option>
                        @if (rolActual == "Administrador")
                        {    
                        <option value="Administrador">Administrador</option>
                        }
                        <option value="Usuario">Usuario</option>
                    </select>
                    <span asp-validation-for="Rol" class="text-danger"></span>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-success">Guardar Usuario</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}